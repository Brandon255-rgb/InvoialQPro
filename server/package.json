{
  "name": "invoialqpro-server",
  "version": "1.0.0",
  "description": "Server application for InvoialQPro",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@shared/schema": "file:../shared/dist",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "pdfkit": "^0.14.0",
    "postgres": "^3.4.3",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.6",
    "stripe": "^18.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "@types/pdfkit": "^0.13.0",
    "@types/pg": "^8.15.1",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.20.14",
    "jest": "^29.5.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "tsc-alias": "^1.8.8"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
